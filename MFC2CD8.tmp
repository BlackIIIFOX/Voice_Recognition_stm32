void Init_LED()
{ 
   GPIO_InitTypeDef port;
   GPIO_StructInit(&port);
   port.GPIO_Mode = GPIO_Mode_Out_PP;
   port.GPIO_Pin = GPIO_Pin_0;
   port.GPIO_Speed = GPIO_Speed_2MHz;
   GPIO_Init(GPIOA, &port); 
}
